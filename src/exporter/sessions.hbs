    <script type="text/javascript">
        window.webSummitSessionFilters = {};
        function applyFilters(filters) {
            $('#sessions tr').show();
            if (filters.stage) {
                $('#sessions tbody tr').each((i, row) => { if ($('.stage', row).text() != filters.stage) { $(row).hide() } });
            }
            if (filters.date) {
                $('#sessions tbody tr').each((i, row) => { if ($('.date', row).text() != filters.date) { $(row).hide() } })
            }
            if (filters.video === false) {
                $('#sessions tbody tr').each((i, row) => { if ($('.videos ul li', row).length > 0) { $(row).hide() } })
            } else if (filters.video === true) {
                $('#sessions tbody tr').each((i, row) => { if ($('.videos ul li', row).length == 0) { $(row).hide() } })
            }
        }
        function filterByStage(stage) {
            window.webSummitSessionFilters.stage = stage;
            applyFilters(window.webSummitSessionFilters);
            return false;
        }
        function filterByDate(date) {
            window.webSummitSessionFilters.date = date;
            applyFilters(window.webSummitSessionFilters);
            return false;
        }
        function filterByVideo(video) {
            window.webSummitSessionFilters.video = video;
            applyFilters(window.webSummitSessionFilters);
            return false;
        }
        $(function() {
            var allStages = Array.from(new Set($('#sessions .stage').map((i, stage) => $(stage).html()))).sort();
            $('#filter-stages').html('')
                .append(`<a class="dropdown-item" href="#" onclick="return filterByStage(null);"">All Stages</a>`)
                .append(`<div class="dropdown-divider"></div>`);
            allStages.forEach(stage => {
                $('#filter-stages').append(
                    `<a class="dropdown-item" href="#" onclick="return filterByStage('${stage}');">${stage}</a>`
                );
            });

            var allDates = Array.from(new Set($('#sessions .date').map((i, date) => $(date).html()))).sort();
            $('#filter-dates').html('')
                .append(`<a class="dropdown-item" href="#" onclick="return filterByDate(null);"">All Dates</a>`)
                .append(`<div class="dropdown-divider"></div>`);
                allDates.forEach(date => {
                $('#filter-dates').append(
                    `<a class="dropdown-item" href="#" onclick="return filterByDate('${date}');">${date}</a>`
                );
            });
        });
    </script>

